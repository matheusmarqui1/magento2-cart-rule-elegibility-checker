<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="ytec" translate="label" sortOrder="400">
            <label>Ytec</label>
        </tab>
        <section id="ytec_rule_eligibility_checker" showInDefault="1" showInWebsite="0" showInStore="0" sortOrder="10" translate="label">
            <label>Rule Eligibility Checker</label>
            <tab>ytec</tab>
            <resource>Ytec_RuleEligibilityCheck::eligibility_check</resource>
            <class>separator-top</class>
            <group id="general" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Sets whether the feature should be visible on cart rules.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
